<tr>
  <td><%= link_to item.title, content_item_path(item) %></td>
  <td><%= item.document_type %></td>
  <td><%= number_with_delimiter item.one_month_page_views %></td>
  <td><%= number_with_delimiter item.six_months_page_views %></td>
  <td>
    <% if item.public_updated_at %>
      <%= time_ago_in_words(item.public_updated_at) %> ago
    <% else %>
      Never
    <% end %>
  </td>
</tr>
